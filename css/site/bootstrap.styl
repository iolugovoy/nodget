        display none !important
for $name, $i in rupture.scale-names
    +at($name)
        .v-{$name}
            display block !important
        .v-{$name}-inline
            display inline !important
        .v-{$name}-inline-block
            display inline-block !important
        .v-{$name}-tablecell
            display table-cell !important
        .v-{$name}-flex
            display flex !important
