.contacts
	background-image url(/assets/images/contacts.png)
	&__item
		font-size 21px
		font-weight bold
		text-transform uppercase
		margin-top 2%
	.preview
		align-items flex-start
		max-width 930px
		margin-right 0
		h1 
			font-weight bold 
			font-size 90px
			margin-bottom 20px
			margin-top 0
			+below(1400px)
				font-size 75px	
			+below(1000px)
				font-size 50px
			+below(600px)
				font-size 40px
		p
			font-weight 400
			font-size 18px
			margin-bottom 1em
			+below(1400px)
				font-size 16px
		.red-btn
			color white
			margin-top 20px
			text-transform none
			font-size 20px
	.mail
		display inline-block
		position relative
		&:after
			background-color white
			background-color currentColor
			content ''
			display block
			position absolute
			left 0
			bottom -15%
			height 3px
			width 100%

.category.top.contacts
	.preview
		max-width none
		margin-right 20%
	.top__mid
		margin-bottom 30px
		+below(1400px)			
			padding-top 50px
			