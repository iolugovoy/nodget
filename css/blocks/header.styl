.header
	display flex
	align-items flex-start
	padding 50px
	padding-bottom 0
	justify-content space-between
	position fixed
	z-index 100
	left 0
	right 0
	top 0
	+below(1200px)
		position static
		height 0
		padding-top 0
	+below(600px)
		padding-right 15px
		padding-left 15px
	&__left
		display flex
		align-items flex-start
		+below(1200px)
			margin-top 50px
	&__logo
		img
			height 65px
			+below(1300px)
				height 45px
	&__menu
		justify-self start
		margin-left 80px
		+below(1400px)
			margin-left 40px
		+below(1200px)
			position fixed
			left 0
			right 0
			top 0
			display flex
			justify-content center
			margin-left 0
			overflow-x scroll
			background linear-gradient(to top, rgba(0,0,0,0), rgba(0,0,0,1));
		+below(1000px)
			display block
	&__menu-list
		list-style-type none
		display flex
		align-items flex-start		
		+below(1200px)
			flex-shrink 0
	&__submenu-list
		list-style-type none
		transition all .2s ease-in-out
		opacity 0
		display none
		.header__menu-link
			padding-top 0
			margin-left -100px
			margin-right -100px
			+below(1000px)
				margin-left 0
				margin-right 0
	&__menu-item
		margin-left 6px 
		margin-right 6px
		position relative
		text-align center
		white-space nowrap
		&:before
			content ''
			position absolute
			left 0 
			right 0 
			top 0
			bottom 0
			opacity 0
			background-color black
			border-radius 15px
			transition all .2s ease-in-out
		&:hover
			&:before
				opacity .5
			>.header__submenu-list
				opacity 1
				display block
		button:focus
			~.header__submenu-list
				opacity 1
				display block
			
			
		
	&__menu-link
		font-size 12px
		color #fff
		text-transform uppercase
		letter-spacing .2em
		position relative
		transition all .2s ease-in-out
		padding 12px 20px
		display block
		+below(1400px)
			font-size 10px
		&:hover:not(button), &:focus:not(button)
			color #ce1a22
		&.active
			font-weight 700
	button.header__menu-link
		cursor default
	&__login
		font-size 12px
		color #fff
		text-transform uppercase
		letter-spacing .2em
		padding-right 20px
		border-right 1px solid white
		margin-right 30px 
		+below(1400px)
			font-size 10px
		+below(600px)
			padding-right 0
			border-right 0
			width 100%
			margin-right 0
			text-align right 
			margin-bottom 20px
		&:hover, &:focus
			color #ce1a22
	&__ctrl
		display flex
		align-items center
		+below(1200px)
			margin-top 58px
		+below(600px)
			justify-content flex-end 
			flex-wrap wrap
			margin-left 50px
	&__cart
		width 50px
		height 50px
		margin-right 30px 
		display flex
		justify-content center
		align-items center
		background-color #ce1a21
		border-radius 50%
		position relative
		transition box-shadow .2s ease-in-out
		box-shadow 0px 0px 0px 0px #ce1a22
		line-height 1
		+below(1400px)
			width 35px
			height 35px
		&:hover, &:focus
			color currentColor
			box-shadow 0px 0px 26px 2px #ce1a22

	&__cart-price
		position absolute 
		top 165%
		transform rotate(90deg)
		width 100px
		height 30px 
		full-centered()
	&__search
		&:hover
			input 
				width 100%
		input
			width 0
			transition width .3s ease-in-out 
			border 0
		button
			cursor pointer
			.icon.icon-lens
				width 30px
				height 30px
				+below(1300px)
					width 20px
					height 20px
				path
					fill white
		form
			display flex
			align-items center
			
		
		
	
	