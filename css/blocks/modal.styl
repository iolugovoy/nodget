.modal
    width 100%
    max-width 680px
    display inline-block
    background-color $bgcolor
    overflow hidden
    position relative
    cursor default
    vertical-align middle
    white-space normal
    text-align left
    margin-y 50px
    box-shadow 0px 0px 20px rgba(#fff, 0.5)
    padding 30px 
    padding-top 60px
    border-radius 20px 0 20px 0
    &_wide
        +above(sm)
            max-width 1160px
    &__close
        z-index 100
        cross 2px #c4c4c4 25px 25px 25px 25px
        position absolute
        right 35px
        top 60px
        cursor pointer