.category.top.news
	background-color #fff
	.preview
		align-items center
		font-family 'Helvetica Neue'
		.title 
			font-size 70px
			font-weight 600
			margin-bottom 20px
		h4
			margin-bottom 50px
		.news-list
			display flex
			flex-wrap wrap
			justify-content space-between
			list-style-type none
		.news-item
			width 28%
			margin-bottom 50px
			display flex 
			align-items center
			flex-direction column
			.image
				overflow hidden
				border-radius 20px 0 20px 0
				width 100%
				full-centered()
				img
					height auto
					width auto
					max-width 100% 
					max-height 100%	
			.title
				font-size 30px
				margin-top 20px