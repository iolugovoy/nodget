html
	height 100%
	width 100%
	min-width 320px
	padding 0px
	margin 0px
	position relative
	&.scroll-locked
		overflow hidden
		body
			overflow hidden
		.header
			margin-right 17px
body
	height 100%
	width 100%
	padding 0px
	margin 0px
	set('font-size', 14px 16px n n 18px n)
	set('line-height', 1.35em 1.37em n n 1.38em n)
	color $baseFontColor
	min-width 320px
	position relative
	background-color $bgcolor
	font-family Muller, sans-serif
.body
	display flex
	position relative
	flex-direction column
	justify-content space-between
	min-height 100%
	padding 0px
	margin 0px
	&__content
		flex 1 1 auto
		position relative
		z-index 0
		
.global-overlay
	position fixed
	left 0px
	right 0px
	top 0px
	bottom 0px
	width 100%
	height 100%
	z-index 1999
	display none
	background-color rgba(#000,0.5)
	
p, ul, ol, table
	margin 0px
	padding 0
	color $baseFontColor
	font-weight 300

li
	margin 0
	list-style-type none

a
	text-decoration none
	display inline
	color white
	transition all .2s ease-in-out
	&:hover, &:focus
		color #ce1a22
.a
	aReset()
	&:hover, &:focus
		color lighten($baseFontColor, 20%)

h1, h2, h3, h4, h5, h6, .title
	color $baseFontColor
	line-height 1em
	margin-top 0
	margin-bottom 0.8em
	font-weight 400
h1, .title
	font-size 24px
	margin-top 0.75em
	+above(sm)
		margin-top 0.3em
		font-size 32px
	+above(md)
		margin-top 0.2em
		font-size 36px
	+above(xl)
		font-size 40px
h2
	font-size 20px
	+above(sm)
		font-size 24px
	+above(md)
		font-size 30px
	+above(xl)
		font-size 36px
h3
	font-size 18px
	+above(sm)
		font-size 20px
	+above(md)
		font-size 24px
	+above(xl)
		font-size 30px
		
h4, h5, h6
	font-size 16px
	+above(sm)
		font-size 18px
	+above(md)
		font-size 20px
	+above(xl)
		font-size 24px
	
.rouble
	font-family $ptr
.hidden
	display none !important
.img
	display block
	max-width 100%
	width auto !important	
	
.table
	overflow auto
	margin-y 15px
	+above(lg)
		margin-y 20px
	+above(xl)
		margin-y 25px
	&>table
		width 100%
		margin 0
	&__active
		background-color #dddddd
table
	border-collapse collapse

.touchevents
	.link, .overlay
		cursor pointer !important
			
.clearfix
	clearfix()


button
	background transparent
	border none
	cursor pointer
	
.rubl
	font-family $ptr
	font-weight inherit
	font-size inherit

	

*
	line-height 1.2
	

section
	background-size cover

@viewport {
	max-width 1920px
}