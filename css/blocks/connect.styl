.connect
	min-height 100vh
	height auto
	background-image url("/assets/images/reg.jpg")
	padding 50px
	display flex
	flex-direction column
	justify-content space-between
	font-family 'HelveticaNeue'
	padding-top 150px
	+below(xl)
		padding-top 50px
	+below(600px)
		padding 15px 
	&__reg
		h2
			font-size 85px
			font-weight bold
			+below(1300)
				font-size 55px
			+below(450px)
				font-size 32px
		h3
			font-size 35px
			font-weight bold
			+below(1300)
				font-size 28px
			+below(450px)
				font-size 22px
		form
			display flex
			font-size 14 px
			flex-direction column
			align-items flex-start
			margin-bottom 60px
			label
				margin-bottom 1em
				display flex
				flex-direction column
				align-items flex-start
				input 
					margin-top .3em
					border-radius 0 15px 15px 0
					background transparent
					border 1px solid white
					color white	
					font-size 25px
					width 300px
					+below(450px)
						width auto
			button.red-btn
				font-size 1em
				color white
				text-transform none
				font-size 14px
				font-weight 400
				padding 13px
				margin-top 30px
				
	&__bottom
		display flex
		justify-content space-between
		font-size 14px
		+below(830px)
			flex-direction column
		h3
			font-size 35px
			font-weight bold
			margin-bottom 10px
			+below(450px)
				font-size 22px
		.social
			width 45%
			+below(830px)
				width 100%
				margin-bottom 3em
			&__list
				display flex
				list-style-type none
				margin-top 30px
			&__item
				margin-right 30px
				svg.icon
					width 20px
					height 20px
	&__mailing
		width 45%
		text-align right
		display flex
		flex-direction column
		align-items flex-end
		+below(830px)
			width 100%
		form
			display flex
			align-items flex-end
			margin-top 1em
			input
				width 440px
				border-left none
				border-right none
				border-top none
				border-botoom 1px solid white
				background transparent
				color white
				+below(1200px)
					width auto
			button
				background transparent 
				color white
				border-radius 15px 0 15px 0
				padding 10px 50px
				border 1px solid white
				margin-left 5px	
				+below(450px)
					padding 10px
				
			