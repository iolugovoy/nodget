.top
	min-height 100vh
	height auto
	background-image url('/assets/images/first.jpg')
	background-size cover
	background-position center center
	padding 50px
	padding-top 150px
	display flex
	flex-direction column
	justify-content space-between
	position relative
	+below(1300px)
		min-height 750px
	+below(600px)
		padding-right 15px 
		padding-left 15px
	&__bgs
		full-fill()
		background-size cover
		background-position center center
	&__bg
		full-fill()
		background-size cover
		background-position center center
		opacity 0
		transition opacity .3s ease-in-out
		&.current
			opacity 1
	&__mid
		position relative
		display flex
		align-items center
		justify-content center
		flex-grow 10
	
	.social
		position absolute
		left 50px
		top 50%
		transform translateY(-50%)
		z-index 10
		+below(800px)
			display none
		&__list
			display flex
			flex-direction column
			list-style-type none
		&__item
			margin 20px 0 
		&__link
			svg
				height 20px
				width 20px
				fill white
				path 
					fill white!important
					
	.slider
		width 100%
		.slide
			text-transform uppercase
			font-family 'HelveticaNeue'
			font-weight 600
			padding 50px
			display flex
			align-items center
			justify-content center
			+below(600px)
				padding 10px 0
			&__text 
				+below(1300px)
					width 40%
				+below(600px)
					width auto
					max-width 45vw
				>*
					line-height 1em
					margin-bottom .2em
				
			&__num
				font-size 20px 
				margin-bottom 1.5em
				+below(1300px)
					font-size 16px 
				+below(450px)
					font-size 12px 
			&__type
				font-size 20px 
				margin-bottom .5em
				+below(1300px)
					font-size 16px 
				+below(450px)	
					font-size 12px 
			&__big-name
				font-size 110px
				margin-bottom .1em
				+below(1300px)
					font-size 80px
				+below(1000px)
					font-size 60px
				+below(700px)
					font-size 45px
				+below(450px)
					font-size 26px 
			&__name
				font-size 55px
				+below(1300px)
					font-size 40px
				+below(450px)
					font-size 22px 
			&__description
				font-size 20px
				+below(1300px)
					font-size 16px
				+below(450px)
					font-size 12px 
			&__price
				font-size 60px
				margin-bottom .6em
				+below(1300px)
					font-size 45px
				+below(450px)
					font-size 30px 
			&__btn
				&:after
					content '+'
					margin-left 30px
					font-size 1.3em
			&__pic
				margin-left 80px
				+below(1400px)
					margin-left 30px
				+below(600px)
					width 35vw
				img
					height 550px
					width auto
					+below(1300px)
						height 300px
					+below(600px)
						height auto
						width 100%
					
		&__ctrls.owl-arrows
			position absolute
			z-index 10
			right 50px
			bottom 50px
			display flex
			flex-direction column
			+below(1400px)
				right 0
	&__bottom
		display flex
		align-items flex-end 
		justify-content space-between
		z-index 1
		position relative
		margin-top 20px
		.scroll
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			display flex
			flex-direction column
			align-items center
			+below(600px)
				display none
			&:hover, &:focus
				cursor pointer
				.scroll__trigger
					top 25px
			&__stage
				width 20px
				height 45px
				position relative
				border 1px solid white
				border-radius 10px
			&__trigger
				width 16px
				height 16px
				border-radius 8px
				border 1px solid white
				position absolute
				left 50%
				top 5%
				transform translateX(-50%)
				animation scroll 1s 4 ease-in-out
				transition top .2s ease-in-out
			&__text
				color white
	&__share
		display flex
		align-items center
		position relative
	&__share-links
		display none
		width 170px
		&.shown
			display block
			position absolute
			top 50% 
			left 0
			transform translate(-100%, -50%)
	&__share-button
		order 1
		height 30px
		&:focus, &:hover
			outline none
			cursor pointer
			.icon-share
				color #ce1a21	
		.icon-share
			width 30px
			height 30px
			svg
				fill currentColor
			
	&__phone-link
		font-size 19px
	&__callback-link
		font-size 13px
	&__phone
		letter-spacing .2em
		

@keyframes scroll {
	0% {
		top: 3px
	}
	50%{
		top: 25px
	}
	100%{ 
		top: 3px
	}
}